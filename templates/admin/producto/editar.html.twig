{% extends 'base-admin.html.twig' %}

{% block title %}Editar un producto{% endblock %}

{% form_theme form _self %}

{% block integer_widget %}
    <div class="integer_widget">
        {% set type = type|default('number') %}
        {{ block('form_widget_simple') }}
    </div>
{% endblock %}

{% block money_widget %}
    <div class="money_widget">
        {% set type = type|default('number') %}
        {{ block('form_widget_simple') }}
    </div>
{% endblock %}

{% block body %}
 
<div class="example-wrapper" >

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="row">
        <div class="col-lg-12">
            <a  onclick="return confirm('Seguro desea eliminar el producto ? No se puede deshacer.')" href="{{ path('eliminar_producto',{id: id} ) }}" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Eliminar el producto"> <i class="fas fa-trash"></i> Eliminar producto  </a>
        </div>  
    </div>

    <div class="row  pt-3" >
        <div class="col-lg-12">
            <div class="card ">
                <div class="card-header">
                    <h5 class="card-title">Editar producto</h5>
                </div>
                <div class="card-body">
            {{ form_start(form, {attr: {class: 'my-form-class'} }) }}
            <div class="row">
                <div class="col-lg-8">
                    {{ form_row(form.nombre) }}
                    {{ form_row(form.codigo) }}
                     {{ form_row(form.categoria) }}
                    {{ form_row(form.destacado_home) }}
                    {{ form_row(form.descripcion) }}
                    {{ form_row(form.precio_costo) }}
                    {{ form_row(form.precio_venta) }}
                    {{ form_row(form.stock) }}
                    <img  style="width:200px; height:200px" src="{{ asset('uploads/imagenes/' ~ imagen ) }}" alt="">
                    {{ form_row(form.imagen) }}
                </div>
               
                <div class="col-lg-4">
                    {{ form_row(form.submit) }} 
                    <a class='btn btn-danger btn-block mt-3' onclick="window.history.back()" > Cancelar </a>
                    
                </div>
                {{ form_end(form) }}
            </div>
            
            
            
        </div>
            </div>
        </div>  
    </div>

    
</div>
            {# {{ form_start(form, {attr: {class: 'my-form-class'} }) }}
            {{ form_widget(form) }}
            {{ form_end(form) }} #}

{% endblock %}
