{% extends 'base.html.twig' %}

{% block title %}Hello VentaController!{% endblock %}

{% block body %}

<div class="example-wrapper" id="productos">
 
 

    <a href="{{ path('v_crear_venta') }}" class="btn btn-info btn-s"> Crear + </a> 

    {% if ventas %}

        <table class="table table-stripped">
            
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Nombre</th> 
                <th>Email</th>
                <th>Telefono</th>
                <th>Acciones</th>
            </tr>
       
        
            {% for venta in ventas %}
                <tr>
                    <td>{{ venta.id  }} </td>
                    <td>{{ venta.getFecha()|date('Y-m-d') }} </td> 
                    <td>{{ venta.getNombre() }} </td>  
                    <td>{{ venta.getEmail() }} </td>
                    <td>{{ venta.getTelefono() }} </td>
                    <td> 
                        <a href="{{ path('v_editar_venta',{id: venta.id} ) }}" class="btn btn-primary"> Editar </a> 
                        <a href="{{ path('eliminar_venta',{id: venta.id} ) }}" class="btn btn-danger"> Eliminar </a>
                    </td>
                </tr>
            {% endfor %}

        </table>
         
    {% endif %}

</div> 
{% endblock %}
