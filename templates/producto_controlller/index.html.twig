{% extends 'base.html.twig' %}

{% block title %} Productos {% endblock %}

{% block body %}
 
<div class="example-wrapper" id="productos">
 
    <h2>[[titulo]]</h2>

    <a href="{{ path('v_crear_producto') }}" class="btn btn-info btn-s"> Crear + </a> 

    {% if productos %}

        <table class="table table-stripped">
            
            <tr>
                <th>ID</th> 
                <th>Nombre</th>
                <th>Precio Costo</th>
                <th>Precio Venta</th>
                <th>Acciones</th>
            </tr>
       
        
            {% for producto in productos %}
                <tr>
                    <td>{{ producto.id  }} </td>
                    <td>{{ producto.getNombre() }} </td> 
                    <td>{{ producto.getPrecioCosto() }} </td> 
                    <td>{{ producto.getPrecioVenta() }} </td>
                    <td> 
                        <a href="{{ path('v_editar_producto',{id: producto.id} ) }}" class="btn btn-primary"> Editar </a> 
                        <a href="{{ path('eliminar_producto',{id: producto.id} ) }}" class="btn btn-danger"> Eliminar </a>
                    </td>
                </tr>
            {% endfor %}

        </table>
         
    {% endif %}


</div> 
 
 
{% endblock %}
